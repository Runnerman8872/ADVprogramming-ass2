@page
@model ADVprogramming_ass2.Pages.Shop_pageModel
@{
}
@foreach (var Item in Model.Items)
{
    <div class="card">
        <div class="card-header">
            @Item.Item_Name
        </div>
        <div class="card-body">
            <p class="card-text">@Item.Item_description</p>
            <form methof="post" asp-page-handler="AddToBasket" asp-route-productID="@Item.Item_Id">
                <button type="submit" class="btn btn-primary">Add to Basket</button>
            </form>
        </div>
    </div>
}
