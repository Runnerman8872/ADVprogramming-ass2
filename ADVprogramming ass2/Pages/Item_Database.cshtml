@page
@model ADVprogramming_ass2.Pages.Item_DatabaseModel
@{
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<link rel="stylesheet" href="~/css/site.css">
<div class="text-center">
    <h1 class="display-4">Welcome</h1>
<main>
<table class="table">
    <thread>
        <tr>
            <th>ID</th>
            <th>Item Name</th>
            <th>Item Type</th>
            <th>Supplier</th>
            <th>Quantity</th>
            <th>Quantity Sold</th>
            <th>Price (£)</th>
        </tr>
    </thread>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>

                <td>@item.Item_Id</td>
                <td>@item.Item_Name</td>
                <td>@item.Item_Type</td>
                <td>@item.Supplier</td>
                <td>@item.Quantity</td>
                <td>@item.QuantSold</td>
                <td>@item.Price_Pound</td>
                <td>
                <a asp-page="/Edit_Item" asp-route-id="@item.Item_Id" class="btn btn-primary">Edit</a>
                <a asp-page="/Delete_Item" asp-route-id="@item.Item_Id" class="btn btn-danger">Delete</a>

                </td>

            </tr>


        }
    </tbody>
</table>
</main>
</div>