@page
@model ADVprogramming_ass2.Pages.User_DatabaseModel
@{
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<link rel="stylesheet" href="~/css/site.css">
<div class="text-center">
    <main>
        <table class="table">
            <thread>
                <tr>
                    <th>ID</th>
                    <th>Username</th>
                    <th>E-mail</th>
                    <th>Age</th>
                    <th>Loyalty card</th>
                    <th>Is staff member</th>
                </tr>
            </thread>
            <tbody>
                @foreach (var item in Model.Users)
                {
                    <tr>

                        <td>@item.User_Id</td>
                        <td>@item.User_Name</td>
                        <td>@item.User_Email</td>
                        <td>@item.Use_Age</td>
                        <td>@item.Loyalty_Card</td>
                        <td>@item.Staff_Member</td>
                        <td>
                            <a asp-page="/Edit" asp-route-id="@item.User_Id" class="btn btn-primary">Edit</a>
                            <a asp-page="/Delete_Item" asp-route-id="@item.User_Id" class="btn btn-danger">Delete</a>

                        </td>
                    </tr>


                }
            </tbody>
        </table>
    </main>
</div>